#include<iostream>
using namespace std;

class Calc {
private:
    int num1;
    int num2;

public:
    void setnum(int a, int b) {
        num1 = a;
        num2 = b;
    }

    int getsum() {
        return num1 + num2;
    }

    int getDiff() {
        return num1 - num2;
    }
};

int main() {
    Calc obj;
    obj.setnum(1000, 500);
    cout << obj.getsum() << endl;
    cout << obj.getDiff() << endl;
    return 0;
}